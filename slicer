Private Sub Worksheet_FollowHyperlink(ByVal Target As Hyperlink)

    Dim fileName As String
    Dim sc As SlicerCache
    Dim mdxName As String
    
    'File column (example: BJ)
    fileName = Trim(Me.Cells(Target.Range.Row, "BJ").Value)
    
    Application.ScreenUpdating = False
    
    Set sc = ThisWorkbook.SlicerCaches("Slicer_File_name1")
    
    'MDX format banana padega OLAP slicer ke liye
    mdxName = "[File_name].[File_name].&[" & fileName & "]"
    
    sc.ClearAllFilters
    sc.VisibleSlicerItemsList = Array(mdxName)
    
    Sheets("View").Activate
    
    Application.ScreenUpdating = True

End Sub
