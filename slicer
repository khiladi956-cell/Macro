Private Sub Worksheet_FollowHyperlink(ByVal Target As Hyperlink)

    Dim fileName As String
    Dim sc As SlicerCache
    Dim si As SlicerItem
    Dim foundItem As String
    
    'File column (BJ change if needed)
    fileName = Trim(Me.Cells(Target.Range.Row, "BJ").Value)
    
    Application.ScreenUpdating = False
    
    '==== FIRST SLICER ====
    Set sc = ThisWorkbook.SlicerCaches("Slicer_File_name1")
    Call FilterOLAPSlicer(sc, fileName)
    
    '==== SECOND SLICER ====
    Set sc = ThisWorkbook.SlicerCaches("Slicer_File_Name")
    Call FilterOLAPSlicer(sc, fileName)
    
    Sheets("View").Activate
    
    Application.ScreenUpdating = True

End Sub
