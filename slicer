Sub FilterOLAPSlicer(sc As SlicerCache, fileName As String)

    Dim si As SlicerItem
    Dim foundItem As String
    
    sc.ClearAllFilters
    foundItem = ""
    
    For Each si In sc.SlicerCacheLevels(1).SlicerItems
        If Trim(si.Caption) = fileName Then
            foundItem = si.Name
            Exit For
        End If
    Next si
    
    If foundItem <> "" Then
        sc.VisibleSlicerItemsList = Array(foundItem)
    End If

End Sub
